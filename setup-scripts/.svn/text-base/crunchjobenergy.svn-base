#!/bin/bash
#BASH SCRIPT TO CONVERT THE JOB EDR FILE INTO XVG
#param f - The name of the input edr file
#param o - The name of the output.xvg file
#param n - The number to pipe in to g_energy

SETRUN_ARGS="$@"
inputfile="benzene_PROD"
inputfile2="benzene_EM"
outputfile="energy.xvg"
num=13

#options passed in from the users
while getopts "f:o:n:" opt; do
        case $opt in
        f )
                inputfile=$OPTARG
                ;;
        o )
                outputfile=$OPTARG
                ;;
	n )
		num=$OPTARG
		;;		
        esac
done

#Extract all relevant thermodynamic information using g_energy
echo Total-Energy | g_energy_d -f $inputfile2 -o "equil_energy.xvg"
echo Potential | g_energy_d -f $inputfile2 -o "equil_potenergy.xvg"

echo Pressure | g_energy_d -f $inputfile2 -o "equil_pressure.xvg"
echo Volume | g_energy_d -f $inputfile2 -o "equil_volume.xvg"
echo Total-Energy | g_energy_d -f $inputfile -o "energy.xvg" | grep Energy > avgenergy.xvg
echo Potential | g_energy_d -f $inputfile -o "potenergy.xvg" | grep Potential > avgpotenergy.xvg
echo Pressure | g_energy_d -f $inputfile -o "pressure.xvg" | grep Pressure > avgpressure.xvg
echo Volume | g_energy_d -f $inputfile -o "volume.xvg" | grep Volume > avgvolume.xvg
echo -e "Potential\nKinetic\nTotal\nTemperature\nVolume\nPressure" | g_energy_d -f $inputfile -o fullenergy.xvg
