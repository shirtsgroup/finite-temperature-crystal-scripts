#!/bin/bash

#BASH SCRIPT TO AUTOMATICALLY SET UP BENZENE MD SIMULATIONS OVER A GIVEN TEMPERATURE RANGE
#By: Eric Dybeck 09/12/2014
#param n - polymorph number (all 3 will be used if none is given)
#param C - lowest pressure
#param H - highest pressure
#param T - temperature
#param P - Pressure spacing
#param N - Number of benzene molecules
#param e - Number of steps in the equilibration step
#param p - Number of steps in the production step
#param i - Integrator
#param t - Thermostat
#param b - Barostat
#param k - maximum harmonic restraint constant
#param L - lambda value for the harmonic restraint (%)
#param G - gamma value for the intermolecular interactions (%) 
#param r - vdw/coulomb cutoff distance (in angstroms)
#param h - optional string hinge to add to the job
#NOTE: By definition, the simulations will be temperature coupled

#=============================================================================================
# SETUP DEFAULT VALUES AND READ IN PARAMETERS FROM USER
#=============================================================================================

SETRUN_ARGS="$@"
polymorph_num="all"
MINPRES=1
MAXPRES=8000
PSPACING=760
TEMP=95
MOLECULES=72
equil_steps=1000000
prod_steps=10000000
integrator="md"
thermostat="nose-hoover"
barostat="Parrinello-Rahman"
k_max=1000
Lambda=0
GAMMA=100
CUTOFF="7"
hinge="DefaultHinge"
output="1000"
potential="opls"

#options passed in from the users
while getopts "n:C:H:T:P:N:e:p:i:t:b:k:L:G:r:h:u:" opt; do
        case $opt in
        n )
                polymorph_num=$OPTARG
                ;;
        C )
                MINPRES=$OPTARG
                ;;
	H )
		MAXPRES=$OPTARG
		;;
	P )
		PSPACING=$OPTARG
		;;
        T )
                TEMP=$OPTARG
                ;;
        N )
                MOLECULES=$OPTARG
                ;;
        e )
                equil_steps=$OPTARG
                ;;
        p )
                prod_steps=$OPTARG
                ;;
        i )
                integrator=$OPTARG
                ;;
        t )
                thermostat=$OPTARG
                ;;
        b )
                barostat=$OPTARG
                ;;
	k )
                k_max=$OPTARG
                ;;
        L )
                Lambda=$OPTARG
                ;;
	G )
		GAMMA=$OPTARG
		;;
	r )
                CUTOFF=$OPTARG
                ;;
        h )
                hinge=$OPTARG
                ;;
	u )
                potential=$OPTARG
                ;;
        esac
done

#=============================================================================================
# ENSURE THAT INPUTS HAVE BEEN PROPERLY ENTERED
#=============================================================================================

#POLYMORPH NUMBER
if [ $polymorph_num != "p1" ] && [ $polymorph_num != "p2" ] && [ $polymorph_num != "p3" ] && [ $polymorph_num != "all" ]; then
        echo "Unrecognized polymorph Number: $polymorph_num"
        exit 1
fi

#PRESSURE
if [ $MINPRES == -1 ] || [ $MAXPRES == -1 ] || [ "$MINPRES" -gt "$MAXPRES" ]; then
	echo "Minimum Temperature: $MINPRES"
	echo "Maximum Temperature: $MAXPRES"
	echo "Is not a valid temperature range!"	
	exit 1
fi 
if [ $PSPACING == -1 ]; then
	echo "Invalid Temperature Spacing: $PSPACING"
	exit 1
fi

#NUMBER OF MOLECULES (currently only 72, 108, 256 is accepted)
if [ $MOLECULES != 256 ] && [ $MOLECULES != 108 ] && [ $MOLECULES != 72 ]; then
        echo "Unsupported number of molecules: $MOLECULES"
        exit 1
fi

#NUMBER OF EQUILIBRATION TIMESTEPS
#if [ N != 256 ]
#        echo "Unsupported number of molecules: $MOLECULES"
#        exit 1
#fi

#NUMBER OF PRODUCTION TIMESTEPS
#if [ MOLECULES != 256 ]
#        echo "Unsupported number of molecules: $MOLECULES"
#        exit 1
#fi

#INTEGRATOR
if [ $integrator != "md" ] && [ $integrator != "md-vv" ]; then
        echo "Unrecognized integrator: $integrator"
        exit 1
fi

#SPRING CONSTANT
if [ $k_max -lt 0 ]; then
        echo "Invalid spring constant: $k_max"
        exit 1
fi

#LAMBDA POINT
if [ $Lambda -lt 0 ] || [ $Lambda -gt 100 ]; then
        echo "Invalid Lambda point: $Lambda"
        exit 1
fi

#GAMMA POINT
if [ $GAMMA -lt 0 ] || [ $GAMMA -gt 100 ]; then
        echo "Invalid Gamma point: $GAMMA"
        exit 1
fi

#CUTOFF RADIUS
if [ "$CUTOFF" -lt "0" ]; then
        echo "Invalid Cutoff Radius: $CUTOFF"
        exit 1
fi

#=============================================================================================
# SETUP Pressure CHANGE PATH
#=============================================================================================

PRES=$MINPRES
while [ "$PRES" -lt "$MAXPRES" ]; do
	if [ $polymorph_num == "p1" ]; then
		setup_benzene -n p1 -P $PRES -N $MOLECULES -e $equil_steps -p $prod_steps -r $CUTOFF -h $hinge -T $TEMP -i $integrator -I 4 -o $output -E NPT -b $barostat -t $thermostat -u $potential
	elif [ $polymorph_num == "p2" ]; then
		setup_benzene -n p2 -P $PRES -N $MOLECULES -e $equil_steps -p $prod_steps -r $CUTOFF -h $hinge -T $TEMP -i $integrator -I 4 -o $output -E NPT -b $barostat -t $thermostat -u $potential
	elif [ $polymorph_num == "p3" ]; then
		setup_benzene -n p3 -P $PRES -N $MOLECULES -e $equil_steps -p $prod_steps -r $CUTOFF -h $hinge -T $TEMP -i $integrator -I 4 -o $output -E NPT -b $barostat -t $thermostat -u $potential
	else
		setup_benzene -n p1 -P $PRES -N $MOLECULES -e $equil_steps -p $prod_steps -r $CUTOFF -h $hinge -T $TEMP -i $integrator -I 4 -o $output -E NPT -b $barostat -t $thermostat -u $potential
		setup_benzene -n p2 -P $PRES -N $MOLECULES -e $equil_steps -p $prod_steps -r $CUTOFF -h $hinge -T $TEMP -i $integrator -I 4 -o $output -E NPT -b $barostat -t $thermostat -u $potential
		setup_benzene -n p3 -P $PRES -N $MOLECULES -e $equil_steps -p $prod_steps -r $CUTOFF -h $hinge -T $TEMP -i $integrator -I 4 -o $output -E NPT -b $barostat -t $thermostat -u $potential
	fi
	let "PRES=$PRES+$PSPACING"
done

#Catch the final pressure off-by-one exception
if [ $polymorph_num == "p1" ]; then
	setup_benzene -n p1 -P $MAXPRES -N $MOLECULES -e $equil_steps -p $prod_steps -r $CUTOFF -h $hinge -T $TEMP -i $integrator -I 4 -o $output -E NPT -b $barostat -t $thermostat -u $potential
elif [ $polymorph_num == "p2" ]; then
        setup_benzene -n p2 -P $MAXPRES -N $MOLECULES -e $equil_steps -p $prod_steps -r $CUTOFF -h $hinge -T $TEMP -i $integrator -I 4 -o $output -E NPT -b $barostat -t $thermostat -u $potential
elif [ $polymorph_num == "p3" ]; then
        setup_benzene -n p3 -P $MAXPRES -N $MOLECULES -e $equil_steps -p $prod_steps -r $CUTOFF -h $hinge -T $TEMP -i $integrator -I 4 -o $output -E NPT -b $barostat -t $thermostat -u $potential
else
        setup_benzene -n p1 -P $MAXPRES -N $MOLECULES -e $equil_steps -p $prod_steps -r $CUTOFF -h $hinge -T $TEMP -i $integrator -I 4 -o $output -E NPT -b $barostat -t $thermostat -u $potential
        setup_benzene -n p2 -P $MAXPRES -N $MOLECULES -e $equil_steps -p $prod_steps -r $CUTOFF -h $hinge -T $TEMP -i $integrator -I 4 -o $output -E NPT -b $barostat -t $thermostat -u $potential
        setup_benzene -n p3 -P $MAXPRES -N $MOLECULES -e $equil_steps -p $prod_steps -r $CUTOFF -h $hinge -T $TEMP -i $integrator -I 4 -o $output -E NPT -b $barostat -t $thermostat -u $potential
fi

